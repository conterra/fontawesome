{
    "properties": {
        "title": "Fontawesome Icons"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "preFetchBundles": false,
        "allowedBundles": [
            "system",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "map-init",
            "map-preload-2D",
            "toolset",
            "toolrules",
            "banner",
            "mapnavigation",
            "share-link",
            "custominfo",
            "dn_fontawesome"
        ]
    },
    "bundles": {
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "esri_hybrid",
                        "basemap": "hybrid"
                    },
                    {
                        "id": "esri_satellite",
                        "basemap": "satellite",
                        "title": "Satellit"
                    },
                    {
                        "id": "topo",
                        "selected": true,
                        "basemap": "topo"
                    },
                    {
                        "id": "custom_gray",
                        "title": "Gray",
                        "description": "This basemap uses a custom layer",
                        "basemap":{
                            "type": "AGS_TILED",
                            "url": "https://services.arcgisonline.com/arcgis/rest/services/Canvas/World_Light_Gray_Base/MapServer"
                        }
                    }
                ],
                "map": {
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": -9276006.978871629,
                        "xmax": -9257662.092083212,
                        "ymin": 5245403.351733481,
                        "ymax": 5255072.635811542,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "banner",
                                "sublayout": [
                                    "mobile_portrait"
                                ],
                                "attachTo": "footer_right"
                            }
                        ]
                    }
                ]
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "id": "infoTool",
                    "title": "App Info",
                    "toolClass": "ctInfo",
                    "widgetSettings": {
                        "content": "This sample shows how font awesome icons can be integrated to map.apps as themes extension. <a target='_blank' href='https://fontawesome.com/icons'>All available (26.107 icons) can be seen here</a>. Please note, that the tools are only placeholders in this app that all perform the same selection.",
                        "window": {
                            "marginBox": {
                                "l": 50,
                                "t": 50,
                                "w": 306,
                                "h": 200
                            }
                        }
                    },
                    "rules": {
                        "groups": "custominfo",
                        "activateOnStartup": true
                    }
                },
                {
                    "id": "tool0",
                    "iconClass": "fab fa-font-awesome"
                },
                {
                    "id": "tool1",
                    "iconClass": "fas fa-coffee"
                },
                {
                    "id": "tool2",
                    "iconClass": "fas fa-paper-plane"
                },
                {
                    "id": "tool3",
                    "iconClass": "fas fa-truck"
                },
                {
                    "id": "tool4",
                    "iconClass": "fas fa-wheelchair"
                },
                {
                    "id": "tool5",
                    "iconClass": "fas fa-wifi"
                },
                {
                    "id": "tool7",
                    "iconClass": "fas fa-user-circle"
                },
                {
                    "id": "tool8",
                    "iconClass": "fas fa-umbrella-beach"
                }
            ]
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "default_tools",
                        "title": "Some Fontawesome Icons",
                        "tools": [
                            "tool*"
                        ],
                        "container": "map"
                    }, {
                        "id": "mapview_tools",
                        "tools": [
                            "locateMeTool",
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "printingEnhancedToggleTool"
                ]
            }
        }
    }
}
