{
    "properties": {    
     "amdPackages": "apprt@^3.2.1"
    },
    "load": {
        "bundleLocations": [
            "bundles",
            "localbundles"
        ],
        "allowedBundles": [
            "dn_fontawesome",
            "custominfo@^3.2.1",
            "system@^3.2.1",
            "map@^3.2.1",
            "themes@^3.2.1",
            "templates@^3.2.1",
            "templatelayout@^3.2.1",
            "windowmanager@^3.2.1",
            "console@^3.2.1",
            "notifier@^3.2.1",
            "contentviewer@^3.2.1",
            "infoviewer@^3.2.1",
            "toolset@^3.2.1",
            "toolrules@^3.2.1"
        ]
    },
    "bundles": {
        "map": {
            "MappingResourceRegistryFactory": {
                "_knownServices": {
                    "services": [
                        {
                            "id": "worldTopo",
                            "type": "AGS_TILED",
                            "url": "http://services.arcgisonline.com/ArcGIS/rest/services/World_Topo_Map/MapServer"
                        }]
                }
            },
            "MapModelFactory": {
                "_configData": {
                    "maps": [{
                            "id": "default",
                            "glass_pane": [],
                            "operationalLayer": [],
                            "baseLayer": [
                                {
                                    "id": "background1",
                                    "title": "${map.base.topo.title}",
                                    "service": "worldTopo",
                                    "layers": ["*"],
                                    "enabled": true
                                }]
                        }]
                }
            },
            "MapState": {
                "initialExtent": {
                    "xmin": 619578.155777645,
                    "ymin": 5965284.64146539,
                    "xmax": 1733575.1859872,
                    "ymax": 7373509.3231059,
                    "spatialReference": {
                        "wkid": 3857
                    }
                }
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [{
                        "id": "default_tools",
                        "title": "Some Fontawesome Icons",
                        "tools": ["tool*"],
                        "container": "map"
                    }]
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "id": "infoTool",
                    "title": "App Info",
                    "toolClass": "ctInfo",
                    "widgetSettings": {
                        "content": "This sample shows how font awesome icons can be integrated to map.apps as themes extension. <a target='_blank' href='http://fortawesome.github.io/Font-Awesome/icons/'>All available (605 icons) can be seen here</a>. Please note, that the tools are only placeholders in this app that all perform the same selection.",
                        "window": {
                            "marginBox": {
                                "l": 50
                            }
                        }
                    },
                    "rules": {
                        "groups": "custominfo",
                        "activateOnStartup": true
                    }
                },
                {
                    "id": "tool0",
                    "iconClass": "fa-font-awesome"
                },
                {
                    "id": "tool1",
                    "iconClass": "fa-coffee"
                },
                {
                    "id": "tool2",
                    "iconClass": "fa-paper-plane"
                },
                {
                    "id": "tool3",
                    "iconClass": "fa-truck"
                },
                {
                    "id": "tool4",
                    "iconClass": "fa-wheelchair"
                },
                {
                    "id": "tool5",
                    "iconClass": "fa-wifi"
                },
                {
                    "id": "tool6",
                    "iconClass": "fa-angellist"
                }
            ]
        }
    }
}
